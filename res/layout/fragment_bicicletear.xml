<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="270dp"
    android:gravity="center"
    android:background="#eeeeee"
    android:orientation="vertical" >
    <TextView
            android:id="@+id/titleBicicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:text="@string/workout" />
    <TextView
            android:id="@+id/subtitleBicicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="@string/workout_subtitle" />
    
   
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
	<ImageButton
            android:id="@+id/seleccionKm"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"  
            android:src="@drawable/km" />

	<Button
	    android:id="@+id/seleccionarDistancia"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/select_km_button"
	    android:textColor="#FFFFFF"
	    android:text="@string/start" />

	</LinearLayout>
     </LinearLayout>
<View
      android:layout_width="fill_parent"
      android:layout_height="7dp"
      android:layout_centerVertical="true"
     android:background="#a0a0a0"
      />
     <ListView
         android:id="@+id/datosK"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
     </ListView>

</LinearLayout>
