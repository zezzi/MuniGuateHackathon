<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="270dp"
    android:gravity="center"
    android:background="#eeeeee"
    android:orientation="vertical" >
    <TextView
            android:id="@+id/titleBicicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Renata Morales" />
    <TextView
            android:id="@+id/subtitleBicicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="Chapin" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
    
	<ImageButton
            android:id="@+id/perfilImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"  
            android:src="@drawable/profile3" />

	

	</LinearLayout>
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >
	<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >
	 <ImageButton
            android:id="@+id/coins"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"  
            android:src="@drawable/coins" />

	 <TextView
	     android:id="@+id/textView2"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:text="255 Monedas" />

	 </LinearLayout>

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="70dp"
	     android:layout_marginLeft="150dp"
	     android:layout_marginRight="10dp"
	     android:gravity="right"
	     android:orientation="vertical" >

	  <ImageButton
            android:id="@+id/experience"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"  
            android:src="@drawable/biki" />

	  <TextView
	      android:id="@+id/textView1"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="Nivel 18" />
	  
	  </LinearLayout>
	    
	</LinearLayout>
	 
     </LinearLayout>
	<View
      android:layout_width="fill_parent"
      android:layout_height="7dp"
      android:layout_centerVertical="true"
     android:background="#a0a0a0"
      />
<LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="35dp"
	     android:layout_marginTop="20dp"
	     android:layout_marginLeft="20dp"
	     android:layout_weight="2"
	     android:orientation="horizontal" >
	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:text="Kilometros recorridos" />

	<TextView
	    android:id="@+id/textView6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="110dp"
	    android:textStyle="bold"
	    android:text="800" />

	</LinearLayout>
<LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="35dp"
	     android:layout_weight="2"
	     android:layout_marginLeft="20dp"
	     android:orientation="horizontal" >
	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:text="Kilometros para el proximo Nivel" />

	<TextView
	    android:id="@+id/textView7"
	    android:layout_width="wrap_content"
	    android:textStyle="bold"
	    android:layout_marginLeft="40dp"
	    android:layout_height="wrap_content"
	    android:text="95" />

</LinearLayout>
<LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="35dp"
	     android:layout_weight="2"
	     android:layout_marginLeft="20dp"
	     android:orientation="horizontal" >
	<TextView
	    android:id="@+id/textView5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:text="Experiencia Actual" />

	<TextView
	    android:id="@+id/textView8"
	    android:layout_width="wrap_content"
	    android:textStyle="bold"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="130dp"
	    android:text="1500" />

	</LinearLayout>
     
</LinearLayout>
