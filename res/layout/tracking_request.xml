<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	
        	android:orientation="horizontal" >

           

        		<LinearLayout
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			
        			android:orientation="vertical" >
        			 <ImageButton
                android:id="@+id/wachButton"
                android:layout_width="60dp"
        			    android:layout_height="60dp"
                android:src="@drawable/watch" />
					
    		</LinearLayout>
    		<LinearLayout
        			android:layout_width="190dp"
        			android:layout_height="wrap_content"
        			android:layout_gravity="center"
        			android:orientation="vertical" >

        	 <TextView
        	     android:id="@+id/timeTitle"
        	     android:layout_width="wrap_content"
        	     android:layout_height="wrap_content"
        	     android:gravity="center"
        	      android:layout_gravity="center"
        	     android:text="TIME"
        	     android:textSize="14sp"
        	     android:textStyle="bold" />

        	  <TextView
        		android:id="@+id/cronometro"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:textSize="30sp"
        		android:text="00:45" />
        	  <TextView
        		android:id="@+id/gpsStatus"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:textSize="9sp"
        		android:text="Fair:GPS" />
    		</LinearLayout>
    		<LinearLayout
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:orientation="vertical" >
        	  <TextView
        		android:id="@+id/avgPace"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:textSize="20sp"
        		android:text="37:04" />
        	  <TextView
        		android:id="@+id/avgtitle"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="9sp"
        		 android:layout_gravity="center"
        		android:text="AVG MIN/MILE" />
        	  <TextView
        		android:id="@+id/latitudTitle"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="10sp"
        		android:layout_marginTop="10dp"
        		 android:layout_gravity="center"
        		android:text="latitud/longitud" />
        	  
        	 <TextView
        		android:id="@+id/latitude"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="14sp"
        		 android:layout_gravity="center"
        		android:text="50.00" />

    		<TextView
        		android:id="@+id/logintud"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="14sp"
        		 android:layout_gravity="center"
        		android:text="-90.45" />
    		
    		</LinearLayout>
    	</LinearLayout>
    	
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="220dp"
        	android:orientation="horizontal" >
    		
            	<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_weight="2"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
    			<TextView
        		android:id="@+id/distanceText"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="14sp"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:text="Distance" />
    			<TextView
        		android:id="@+id/distanceTextChange"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="34sp"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:text="0.00" />
    			<TextView
        		android:id="@+id/distanceMeasure"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="14sp"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:text="KM" />
    			
    			</LinearLayout>
    			<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
        	android:orientation="vertical" >
    			<TextView
        		android:id="@+id/paceText"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="14sp"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:text="Distance" />
    			<TextView
        		android:id="@+id/paceTextChange"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="34sp"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:text="0.00" />
    			<TextView
        		android:id="@+id/paceMeasure"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="14sp"
        		android:textStyle="bold"
        		 android:layout_gravity="center"
        		android:text="MIN KM" />
    			
    			</LinearLayout>
    		</LinearLayout>
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	
        	android:orientation="horizontal" >
    		 <Button
        android:id="@+id/stopTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:background="@drawable/select_km_button"
        android:text="Stop" />	
         <Button
        android:id="@+id/pauseTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:background="@drawable/select_km_button"
        android:text="Pause" />
            
    </LinearLayout>
    </LinearLayout>	
</LinearLayout>